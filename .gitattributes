# Default normalize; store as LF
* text=auto eol=lf

# VS/WPF project files should be CRLF on checkout (avoids VS warnings)
*.sln      text eol=crlf
*.csproj   text eol=crlf
*.props    text eol=crlf
*.targets  text eol=crlf
*.cs       text eol=crlf
*.xaml     text eol=crlf
*.json     text eol=crlf
*.config   text eol=crlf

# Scripts
*.bat      text eol=crlf
*.cmd      text eol=crlf
*.ps1      text eol=crlf
*.sh       text eol=lf

# Binaries (never touch)
*.png   -text
*.jpg   -text
*.jpeg  -text
*.gif   -text
*.ico   -text
*.zip   -text
*.7z    -text
*.pdf   -text
*.dll   -text
*.exe   -text
