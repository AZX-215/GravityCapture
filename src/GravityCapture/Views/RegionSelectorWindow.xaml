<Window x:Class="GravityCapture.Views.RegionSelectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Region"
        WindowStyle="None"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Topmost="True"
        AllowsTransparency="True"
        Background="Transparent"
        Focusable="True"
        KeyDown="OnKeyDown">
  <!-- Root canvas must be named exactly 'RootCanvas' to match code-behind -->
  <Canvas x:Name="RootCanvas"
          SnapsToDevicePixels="True"
          MouseLeftButtonDown="OnDown"
          MouseMove="OnMove"
          MouseLeftButtonUp="OnUp"
          MouseRightButtonDown="OnCancel">
    <!-- Selection rectangle must be named 'Sel' to match code-behind -->
    <Rectangle x:Name="Sel"
               Width="0" Height="0"
               Visibility="Collapsed"
               Stroke="#66A8D1FF"
               StrokeThickness="2">
      <Rectangle.Fill>
        <SolidColorBrush Color="#33A8D1FF"/>
      </Rectangle.Fill>
    </Rectangle>
  </Canvas>
</Window>
