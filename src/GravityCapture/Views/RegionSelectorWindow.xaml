<Window x:Class="GravityCapture.Views.RegionSelectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="#10000000"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        KeyDown="OnKeyDown">
  <Canvas x:Name="RootCanvas"
          Background="#10000000"
          Focusable="True"
          Cursor="Cross"
          MouseLeftButtonDown="OnDown"
          MouseMove="OnMove"
          MouseLeftButtonUp="OnUp"
          MouseRightButtonUp="OnCancel">
    <Rectangle x:Name="Sel"
               Visibility="Collapsed"
               Stroke="DeepSkyBlue"
               StrokeThickness="2"
               Fill="#40FFFFFF"
               RadiusX="2" RadiusY="2"
               IsHitTestVisible="False"/>
  </Canvas>
</Window>
