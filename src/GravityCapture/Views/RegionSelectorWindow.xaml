<Window x:Class="GravityCapture.Views.RegionSelectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Region"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="#40000000"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        Cursor="Cross"
        SnapsToDevicePixels="True"
        UseLayoutRounding="True"
        Width="800" Height="600">
  <!-- NOTE: When we want full-screen we set WindowState=Maximized programmatically.
             When we want to limit to the ARK window, we position and size this window
             to that windowâ€™s bounds via the Rect constructor overload. -->
  <Canvas x:Name="RootCanvas"
          Background="Transparent"
          MouseLeftButtonDown="OnDown"
          MouseMove="OnMove"
          MouseLeftButtonUp="OnUp">
    <Rectangle x:Name="Sel"
               Stroke="#FF66CCFF"
               StrokeThickness="2"
               Fill="#4088CCFF"
               Visibility="Collapsed"/>
    <TextBlock x:Name="Hint"
               Foreground="White"
               FontSize="16"
               Margin="12"
               Text="Drag to select the log area. ESC cancels."/>
  </Canvas>
</Window>
