<Application x:Class="GravityCapture.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
  <Application.Resources>
    <!-- Palette -->
    <Color x:Key="BgColor">#0B0B0C</Color>
    <Color x:Key="CardColor">#141519</Color>
    <Color x:Key="AccentColor">#7D7FFF</Color>
    <Color x:Key="TextPrimaryColor">#B0B3BA</Color>
    <Color x:Key="TextSecondaryColor">#E4E6EB</Color>
    <Color x:Key="InputBgColor">#1B1D22</Color>
    <Color x:Key="InputBorderColor">#2A2D36</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="BgBrush" Color="{DynamicResource BgColor}"/>
    <SolidColorBrush x:Key="CardBrush" Color="{DynamicResource CardColor}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{DynamicResource AccentColor}"/>
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{DynamicResource TextPrimaryColor}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{DynamicResource TextSecondaryColor}"/>
    <SolidColorBrush x:Key="InputBgBrush" Color="{DynamicResource InputBgColor}"/>
    <SolidColorBrush x:Key="InputBorderBrush" Color="{DynamicResource InputBorderColor}"/>

    <!-- Misc -->
    <sys:Double x:Key="CardRadius">12</sys:Double>
    <Thickness x:Key="DefaultPadding">10</Thickness>

    <!-- TextBox -->
    <Style TargetType="TextBox">
      <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
      <Setter Property="Background" Value="{DynamicResource InputBgBrush}"/>
      <Setter Property="BorderBrush" Value="{DynamicResource InputBorderBrush}"/>
      <Setter Property="BorderThickness" Value="1"/>
      <Setter Property="Padding" Value="10"/>
    </Style>

    <!-- CheckBox -->
    <Style TargetType="CheckBox">
      <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
    </Style>

    <!-- GroupBox -->
    <Style TargetType="GroupBox">
      <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
      <Setter Property="BorderBrush" Value="{DynamicResource InputBorderBrush}"/>
    </Style>

    <!-- Primary button -->
    <Style x:Key="PrimaryButton" TargetType="Button">
      <Setter Property="Foreground" Value="White"/>
      <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
      <Setter Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
      <Setter Property="BorderThickness" Value="1"/>
      <Setter Property="Padding" Value="8,6"/>
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="Button">
            <Border Background="{TemplateBinding Background}"
                    CornerRadius="12"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}">
              <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <ControlTemplate.Triggers>
              <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Opacity" Value="0.9"/>
              </Trigger>
              <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Opacity" Value="0.5"/>
              </Trigger>
            </ControlTemplate.Triggers>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>

    <!-- Secondary button -->
    <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
      <Setter Property="Background" Value="{DynamicResource CardBrush}"/>
      <Setter Property="BorderBrush" Value="{DynamicResource InputBorderBrush}"/>
      <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
    </Style>
  </Application.Resources>
</Application>
