<Application x:Class="GravityCapture.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
  <Application.Resources>

    <!-- Palette -->
    <SolidColorBrush x:Key="BgBrush"        Color="#1E1F23"/>
    <SolidColorBrush x:Key="CardBrush"      Color="#262B33"/>
    <SolidColorBrush x:Key="BorderBrush"    Color="#333842"/>
    <SolidColorBrush x:Key="MutedTextBrush" Color="#B9C2CF"/>
    <SolidColorBrush x:Key="TextBrush"      Color="#F2F4F8"/>
    <SolidColorBrush x:Key="AccentBrush"    Color="#6EA8FE"/>

    <!-- Defaults -->
    <Style TargetType="Window">
      <Setter Property="Background" Value="{DynamicResource BgBrush}"/>
      <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
      <Setter Property="SnapsToDevicePixels" Value="True"/>
      <Setter Property="UseLayoutRounding" Value="True"/>
      <Setter Property="MinWidth" Value="960"/>
      <Setter Property="MinHeight" Value="600"/>
      <Setter Property="ResizeMode" Value="CanResize"/>
    </Style>

    <Style TargetType="Border">
      <Setter Property="CornerRadius" Value="8"/>
      <Setter Property="BorderBrush"  Value="{DynamicResource BorderBrush}"/>
      <Setter Property="BorderThickness" Value="1"/>
      <Setter Property="Background"   Value="{DynamicResource CardBrush}"/>
    </Style>

    <Style TargetType="Button">
      <Setter Property="Foreground"   Value="{DynamicResource TextBrush}"/>
      <Setter Property="Background"   Value="{DynamicResource CardBrush}"/>
      <Setter Property="BorderBrush"  Value="{DynamicResource BorderBrush}"/>
      <Setter Property="Padding"      Value="10,6"/>
      <Setter Property="Margin"       Value="4,0,4,0"/>
    </Style>

    <Style TargetType="TextBox">
      <Setter Property="Foreground"   Value="{DynamicResource TextBrush}"/>
      <Setter Property="Background"   Value="{DynamicResource CardBrush}"/>
      <Setter Property="BorderBrush"  Value="{DynamicResource BorderBrush}"/>
      <Setter Property="CaretBrush"   Value="{DynamicResource TextBrush}"/>
      <Setter Property="Padding"      Value="6,4"/>
      <Setter Property="Margin"       Value="4,2"/>
    </Style>

    <Style TargetType="CheckBox">
      <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
      <Setter Property="Margin"     Value="4,2"/>
    </Style>

    <Style TargetType="Label">
      <Setter Property="Foreground" Value="{DynamicResource MutedTextBrush}"/>
      <Setter Property="Margin"     Value="4,2"/>
    </Style>

    <!-- TabControl template so content area isnâ€™t white -->
    <Style TargetType="TabControl">
      <Setter Property="Background"   Value="{DynamicResource BgBrush}"/>
      <Setter Property="BorderBrush"  Value="{DynamicResource BorderBrush}"/>
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="TabControl">
            <Grid ClipToBounds="True" SnapsToDevicePixels="True">
              <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
              </Grid.RowDefinitions>

              <TabPanel Grid.Row="0"
                        Background="{DynamicResource BgBrush}"
                        Margin="8,8,8,0"
                        IsItemsHost="True"/>

              <Border Grid.Row="1"
                      Margin="8"
                      Background="{DynamicResource CardBrush}"
                      BorderBrush="{DynamicResource BorderBrush}"
                      BorderThickness="1"
                      Padding="12">
                <ContentPresenter ContentSource="SelectedContent"/>
              </Border>
            </Grid>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>

    <Style TargetType="TabItem">
      <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
      <Setter Property="Padding"    Value="12,8"/>
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="TabItem">
            <Border x:Name="Bd"
                    Background="{DynamicResource BgBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="0,0,0,1"
                    Padding="{TemplateBinding Padding}">
              <ContentPresenter ContentSource="Header"/>
            </Border>
            <ControlTemplate.Triggers>
              <Trigger Property="IsSelected" Value="True">
                <Setter TargetName="Bd" Property="Background" Value="{DynamicResource CardBrush}"/>
                <Setter TargetName="Bd" Property="BorderThickness" Value="1,1,1,0"/>
                <Setter Property="Panel.ZIndex" Value="1"/>
              </Trigger>
            </ControlTemplate.Triggers>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>

  </Application.Resources>
</Application>
