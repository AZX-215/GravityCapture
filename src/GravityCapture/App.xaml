<Application x:Class="GravityCapture.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
  <Application.Resources>
    <!-- Palette -->
    <Color x:Key="BgColor">#0E1014</Color>
    <Color x:Key="CardColor">#171A1F</Color>
    <Color x:Key="AccentColor">#7D7FFF</Color>
    <Color x:Key="TextColor">#FFFFFF</Color>
    <Color x:Key="TextMutedColor">#C8CBD2</Color>
    <Color x:Key="InputBgColor">#1C2027</Color>
    <Color x:Key="InputBorderColor">#2B3140</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="BgBrush" Color="{DynamicResource BgColor}"/>
    <SolidColorBrush x:Key="CardBrush" Color="{DynamicResource CardColor}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{DynamicResource AccentColor}"/>
    <SolidColorBrush x:Key="TextBrush" Color="{DynamicResource TextColor}"/>
    <SolidColorBrush x:Key="TextMutedBrush" Color="{DynamicResource TextMutedColor}"/>
    <SolidColorBrush x:Key="InputBgBrush" Color="{DynamicResource InputBgColor}"/>
    <SolidColorBrush x:Key="InputBorderBrush" Color="{DynamicResource InputBorderColor}"/>

    <CornerRadius x:Key="CardRadius">12</CornerRadius>

    <!-- Window defaults -->
    <Style TargetType="Window">
      <Setter Property="Background" Value="{DynamicResource BgBrush}"/>
      <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
      <Setter Property="FontFamily" Value="Segoe UI"/>
    </Style>
    <Style TargetType="TextElement">
      <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
    </Style>
    <Style TargetType="TextBlock">
      <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
    </Style>

    <!-- Remove dotted focus rectangles -->
    <Style TargetType="Button"><Setter Property="FocusVisualStyle" Value="{x:Null}"/></Style>
    <Style TargetType="CheckBox"><Setter Property="FocusVisualStyle" Value="{x:Null}"/></Style>

    <!-- Inputs -->
    <Style x:Key="BaseInput" TargetType="Control">
      <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
      <Setter Property="Background" Value="{DynamicResource InputBgBrush}"/>
      <Setter Property="BorderBrush" Value="{DynamicResource InputBorderBrush}"/>
      <Setter Property="BorderThickness" Value="1"/>
      <Setter Property="Padding" Value="8,6"/>
      <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
    </Style>
    <Style TargetType="TextBox" BasedOn="{StaticResource BaseInput}"/>
    <Style TargetType="PasswordBox" BasedOn="{StaticResource BaseInput}"/>

    <!-- Buttons -->
    <Style x:Key="PrimaryButton" TargetType="Button">
      <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
      <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
      <Setter Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
      <Setter Property="BorderThickness" Value="1"/>
      <Setter Property="Padding" Value="10,7"/>
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="Button">
            <Border Background="{TemplateBinding Background}"
                    CornerRadius="{DynamicResource CardRadius}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}">
              <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>
    <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
      <Setter Property="Background" Value="{DynamicResource CardBrush}"/>
      <Setter Property="BorderBrush" Value="{DynamicResource InputBorderBrush}"/>
    </Style>
  </Application.Resources>
</Application>
