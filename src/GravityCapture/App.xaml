<Application x:Class="GravityCapture.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- Palette -->
        <SolidColorBrush x:Key="BgColor"     Color="#1E1F25"/>
        <SolidColorBrush x:Key="CardColor"   Color="#24262E"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#3A3D47"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#4E8EF7"/>
        <SolidColorBrush x:Key="TextBrush"   Color="#FFFFFF"/>

        <!-- Window defaults -->
        <Style TargetType="Window">
            <Setter Property="Background" Value="{DynamicResource BgColor}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize"   Value="13"/>
        </Style>

        <!-- Elements -->
        <Style TargetType="GroupBox">
            <Setter Property="Background" Value="{DynamicResource CardColor}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin"  Value="8"/>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="Background" Value="{DynamicResource CardColor}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="Margin" Value="4"/>
        </Style>

        <Style TargetType="PasswordBox">
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="Background" Value="{DynamicResource CardColor}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="Margin" Value="4"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Padding" Value="10,6"/>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="Margin" Value="2,2,2,4"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
        </Style>

        <Style TargetType="TabControl">
            <Setter Property="Background" Value="{DynamicResource BgColor}"/>
            <Setter Property="Margin" Value="8"/>
        </Style>

        <Style TargetType="Border">
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
        </Style>
    </Application.Resources>
</Application>
