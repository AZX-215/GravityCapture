<Application x:Class="GravityCapture.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
  <Application.Resources>
    <SolidColorBrush x:Key="BgColor"            Color="#1C1E22"/>
    <SolidColorBrush x:Key="CardColor"          Color="#24272D"/>
    <SolidColorBrush x:Key="InputBgColor"       Color="#000000"/>
    <SolidColorBrush x:Key="InputBorderColor"   Color="#3A404A"/>
    <SolidColorBrush x:Key="TextBrush"          Color="#D0D0D0"/>
    <SolidColorBrush x:Key="TextMutedBrush"     Color="#B9C0CC"/>

    <Style TargetType="Window">
      <Setter Property="Background" Value="{DynamicResource BgColor}"/>
      <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
      <Setter Property="FontFamily" Value="Microsoft YaHei UI"/>
      <Setter Property="SnapsToDevicePixels" Value="True"/>
    </Style>

    <Style TargetType="GroupBox">
      <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
      <Setter Property="Background" Value="{DynamicResource BgColor}"/>
      <Setter Property="Padding" Value="6"/>
      <Setter Property="Margin"  Value="8"/>
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="GroupBox">
            <Grid>
              <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
              </Grid.RowDefinitions>
              <Border Grid.Row="0" CornerRadius="6,6,0,0"
                      Background="#1A000000"
                      BorderBrush="{DynamicResource InputBorderColor}"
                      BorderThickness="0,1,0,0" Padding="8,4,8,4">
                <ContentPresenter ContentSource="Header"/>
              </Border>
              <Border Grid.Row="1" CornerRadius="0,0,6,6"
                      Background="{TemplateBinding Background}"
                      BorderBrush="{DynamicResource InputBorderColor}"
                      BorderThickness="1">
                <ContentPresenter Margin="8,6,8,8"/>
              </Border>
            </Grid>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>

    <Style TargetType="Button">
      <Setter Property="Padding" Value="10,6"/>
      <Setter Property="Margin"  Value="6"/>
      <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
      <Setter Property="Background" Value="#2B2F36"/>
      <Setter Property="BorderBrush" Value="{DynamicResource InputBorderColor}"/>
      <Setter Property="BorderThickness" Value="1"/>
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="Button">
            <Border x:Name="Bd" CornerRadius="8"
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}">
              <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <ControlTemplate.Triggers>
              <Trigger Property="IsMouseOver" Value="True">
                <Setter TargetName="Bd" Property="Background" Value="#343A44"/>
              </Trigger>
              <Trigger Property="IsPressed" Value="True">
                <Setter TargetName="Bd" Property="Background" Value="#3E4551"/>
              </Trigger>
              <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Opacity" Value="0.55"/>
              </Trigger>
            </ControlTemplate.Triggers>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>

    <Style TargetType="TextBox">
      <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
      <Setter Property="Background" Value="{DynamicResource InputBgColor}"/>
      <Setter Property="BorderBrush" Value="{DynamicResource InputBorderColor}"/>
      <Setter Property="BorderThickness" Value="1"/>
      <Setter Property="Padding" Value="6,4"/>
      <Setter Property="Margin"  Value="6"/>
    </Style>

    <!-- Tabs: bigger, centered, close to banner -->
    <Style TargetType="TabControl">
      <Setter Property="Background" Value="#16191F"/>
      <Setter Property="BorderThickness" Value="0"/>
      <Setter Property="Padding" Value="0"/>
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="TabControl">
            <Grid SnapsToDevicePixels="True">
              <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>  <!-- headers -->
                <RowDefinition Height="Auto"/>  <!-- template banner row -->
                <RowDefinition Height="*"/>     <!-- content -->
              </Grid.RowDefinitions>

              <TabPanel Grid.Row="0" IsItemsHost="True"
                        HorizontalAlignment="Center"
                        Margin="0,2,0,6"/>

              <Border Grid.Row="1" Visibility="Collapsed"/>

              <Border Grid.Row="2" Background="{TemplateBinding Background}">
                <ContentPresenter x:Name="PART_SelectedContentHost" ContentSource="SelectedContent"/>
              </Border>
            </Grid>
          </ControlTemplate>
        </Setter.Value>
      </Setter>

      <Setter Property="ItemContainerStyle">
        <Setter.Value>
          <Style TargetType="TabItem">
            <Setter Property="Height"   Value="44"/>
            <Setter Property="MinWidth" Value="160"/>
            <Setter Property="Padding"  Value="96,10"/>
            <Setter Property="Margin"   Value="6,2,6,2"/>
            <Setter Property="Template">
              <Setter.Value>
                <ControlTemplate TargetType="TabItem">
                  <Border x:Name="Bd" CornerRadius="10"
                          Background="#2B2F36"
                          BorderBrush="{DynamicResource InputBorderColor}"
                          BorderThickness="1" Padding="{TemplateBinding Padding}">
                    <ContentPresenter ContentSource="Header"
                                      HorizontalAlignment="Center" VerticalAlignment="Center"/>
                  </Border>
                  <ControlTemplate.Triggers>
                    <Trigger Property="IsSelected" Value="True">
                      <Setter TargetName="Bd" Property="Background" Value="#383E49"/>
                      <Setter Property="Panel.ZIndex" Value="1"/>
                    </Trigger>
                  </ControlTemplate.Triggers>
                </ControlTemplate>
              </Setter.Value>
            </Setter>
          </Style>
        </Setter.Value>
      </Setter>
    </Style>
  
<!-- Dark ScrollBar style (GC) -->
<SolidColorBrush x:Key="GC_ScrollBarBg" Color="#0F141C"/>
<SolidColorBrush x:Key="GC_ScrollBarTrack" Color="#141B26"/>
<SolidColorBrush x:Key="GC_ScrollBarThumb" Color="#3A465A"/>
<SolidColorBrush x:Key="GC_ScrollBarThumbHover" Color="#4A5A73"/>
<SolidColorBrush x:Key="GC_ScrollBarThumbDrag" Color="#5A6B86"/>

<ControlTemplate x:Key="GC_ScrollBar_Vertical" TargetType="{x:Type ScrollBar}">
  <Grid Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
    <Track x:Name="PART_Track" IsDirectionReversed="True">
      <Track.DecreaseRepeatButton>
        <RepeatButton Command="ScrollBar.PageUpCommand"
                      Background="{StaticResource GC_ScrollBarTrack}"
                      Opacity="0.55"
                      Focusable="False"/>
      </Track.DecreaseRepeatButton>
      <Track.Thumb>
        <Thumb x:Name="Thumb" Focusable="False">
          <Thumb.Template>
            <ControlTemplate TargetType="{x:Type Thumb}">
              <Border x:Name="ThumbBorder"
                      Background="{StaticResource GC_ScrollBarThumb}"
                      CornerRadius="6"
                      Margin="2"/>
              <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                  <Setter TargetName="ThumbBorder" Property="Background" Value="{StaticResource GC_ScrollBarThumbHover}"/>
                </Trigger>
                <Trigger Property="IsDragging" Value="True">
                  <Setter TargetName="ThumbBorder" Property="Background" Value="{StaticResource GC_ScrollBarThumbDrag}"/>
                </Trigger>
              </ControlTemplate.Triggers>
            </ControlTemplate>
          </Thumb.Template>
        </Thumb>
      </Track.Thumb>
      <Track.IncreaseRepeatButton>
        <RepeatButton Command="ScrollBar.PageDownCommand"
                      Background="{StaticResource GC_ScrollBarTrack}"
                      Opacity="0.55"
                      Focusable="False"/>
      </Track.IncreaseRepeatButton>
    </Track>
  </Grid>
</ControlTemplate>

<ControlTemplate x:Key="GC_ScrollBar_Horizontal" TargetType="{x:Type ScrollBar}">
  <Grid Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
    <Track x:Name="PART_Track" IsDirectionReversed="False" Orientation="Horizontal">
      <Track.DecreaseRepeatButton>
        <RepeatButton Command="ScrollBar.PageLeftCommand"
                      Background="{StaticResource GC_ScrollBarTrack}"
                      Opacity="0.55"
                      Focusable="False"/>
      </Track.DecreaseRepeatButton>
      <Track.Thumb>
        <Thumb x:Name="Thumb" Focusable="False">
          <Thumb.Template>
            <ControlTemplate TargetType="{x:Type Thumb}">
              <Border x:Name="ThumbBorder"
                      Background="{StaticResource GC_ScrollBarThumb}"
                      CornerRadius="6"
                      Margin="2"/>
              <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                  <Setter TargetName="ThumbBorder" Property="Background" Value="{StaticResource GC_ScrollBarThumbHover}"/>
                </Trigger>
                <Trigger Property="IsDragging" Value="True">
                  <Setter TargetName="ThumbBorder" Property="Background" Value="{StaticResource GC_ScrollBarThumbDrag}"/>
                </Trigger>
              </ControlTemplate.Triggers>
            </ControlTemplate>
          </Thumb.Template>
        </Thumb>
      </Track.Thumb>
      <Track.IncreaseRepeatButton>
        <RepeatButton Command="ScrollBar.PageRightCommand"
                      Background="{StaticResource GC_ScrollBarTrack}"
                      Opacity="0.55"
                      Focusable="False"/>
      </Track.IncreaseRepeatButton>
    </Track>
  </Grid>
</ControlTemplate>

<Style TargetType="{x:Type ScrollBar}">
  <Setter Property="Background" Value="{StaticResource GC_ScrollBarBg}"/>
  <Setter Property="Width" Value="12"/>
  <Setter Property="Height" Value="12"/>
  <Setter Property="Focusable" Value="False"/>
  <Setter Property="Template" Value="{StaticResource GC_ScrollBar_Vertical}"/>
  <Style.Triggers>
    <Trigger Property="Orientation" Value="Horizontal">
      <Setter Property="Template" Value="{StaticResource GC_ScrollBar_Horizontal}"/>
    </Trigger>
    <Trigger Property="IsEnabled" Value="False">
      <Setter Property="Opacity" Value="0.35"/>
    </Trigger>
  </Style.Triggers>
</Style>
</Application.Resources>
</Application>
