<Application x:Class="GravityCapture.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <!-- Palette -->
        <Color x:Key="BgTop">#0A0F16</Color>
        <Color x:Key="BgBottom">#070A10</Color>
        <Color x:Key="PanelBg">#121826</Color>
        <Color x:Key="CardBg">#0F1522</Color>
        <Color x:Key="Stroke">#223049</Color>
        <Color x:Key="StrokeSoft">#1A2538</Color>
        <Color x:Key="TextPrimary">#E9EEF7</Color>
        <Color x:Key="TextSecondary">#A8B4C8</Color>
        <Color x:Key="Accent">#79B0FF</Color>
        <Color x:Key="Danger">#FF6B6B</Color>

        <SolidColorBrush x:Key="BrushTextPrimary" Color="{StaticResource TextPrimary}"/>
        <SolidColorBrush x:Key="BrushTextSecondary" Color="{StaticResource TextSecondary}"/>
        <SolidColorBrush x:Key="BrushStroke" Color="{StaticResource Stroke}"/>
        <SolidColorBrush x:Key="BrushStrokeSoft" Color="{StaticResource StrokeSoft}"/>
        <SolidColorBrush x:Key="BrushPanelBg" Color="{StaticResource PanelBg}"/>
        <SolidColorBrush x:Key="BrushCardBg" Color="{StaticResource CardBg}"/>
        <SolidColorBrush x:Key="BrushAccent" Color="{StaticResource Accent}"/>
        <SolidColorBrush x:Key="BrushDanger" Color="{StaticResource Danger}"/>

        <!-- Default text -->
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="Foreground" Value="{StaticResource BrushTextPrimary}"/>
        </Style>

        <!-- TextBox / PasswordBox -->
        <Style TargetType="{x:Type TextBox}">
            <Setter Property="Background" Value="#0C111B"/>
            <Setter Property="Foreground" Value="{StaticResource BrushTextPrimary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BrushStrokeSoft}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="{x:Type PasswordBox}">
            <Setter Property="Background" Value="#0C111B"/>
            <Setter Property="Foreground" Value="{StaticResource BrushTextPrimary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BrushStrokeSoft}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type PasswordBox}">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Buttons -->
        <Style TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#16233A"/>
            <Setter Property="Foreground" Value="{StaticResource BrushTextPrimary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BrushStrokeSoft}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,9"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1C2E4D"/>
                                <Setter Property="BorderBrush" Value="{StaticResource BrushStroke}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#0F1A2E"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="{x:Type Button}" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#1D3D72"/>
            <Setter Property="BorderBrush" Value="#2C5AA8"/>
        </Style>

        <Style x:Key="DangerButton" TargetType="{x:Type Button}" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#3A1A1A"/>
            <Setter Property="BorderBrush" Value="#6B2B2B"/>
        </Style>

        <!-- CheckBox -->
        <Style TargetType="{x:Type CheckBox}">
            <Setter Property="Foreground" Value="{StaticResource BrushTextPrimary}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type CheckBox}">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Border x:Name="Box" Width="18" Height="18" CornerRadius="5"
                                    Background="#0C111B" BorderBrush="{StaticResource BrushStrokeSoft}" BorderThickness="1"
                                    Margin="0,0,10,0">
                                <Path x:Name="Tick" Data="M 3 9 L 7 13 L 15 4" Stroke="{StaticResource BrushAccent}" StrokeThickness="2"
                                      Visibility="Collapsed"/>
                            </Border>
                            <ContentPresenter VerticalAlignment="Center"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Tick" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="Box" Property="BorderBrush" Value="{StaticResource BrushStroke}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Application.Resources>
</Application>
