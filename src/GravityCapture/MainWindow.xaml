<Window x:Class="GravityCapture.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gravity Capture"
        Width="680" Height="540"
        WindowStartupLocation="CenterScreen"
        Icon="Assets/Gravity_App_Icon.png">

  <!-- Single background: the image -->
  <Window.Background>
    <ImageBrush ImageSource="Assets/Gravity_Logs_Background.png"
                Stretch="UniformToFill" Opacity="0.28"/>
  </Window.Background>

  <Grid Margin="20">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>   <!-- header -->
      <RowDefinition Height="*"/>      <!-- form -->
      <RowDefinition Height="Auto"/>   <!-- buttons -->
      <RowDefinition Height="Auto"/>   <!-- status -->
    </Grid.RowDefinitions>

    <!-- Header -->
    <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,14">
      <Image Source="Assets/HLNA.png" Width="44" Height="44" Margin="0,0,12,0"/>
      <StackPanel Orientation="Vertical">
        <TextBlock Text="GRAVITY CAPTURE" FontSize="26" FontWeight="Bold"
                   Foreground="{StaticResource TextPrimaryBrush}"/>
        <TextBlock Text="desktop capture agent" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"/>
      </StackPanel>
    </DockPanel>

    <!-- Card body -->
    <Border Grid.Row="1" Background="{StaticResource CardBrush}" CornerRadius="14" Padding="18">
      <Grid>
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="170"/>
          <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="Bot API URL" Style="{StaticResource FormLabel}" />
        <TextBox Grid.Row="0" Grid.Column="1" Name="ApiUrlBox" />

        <Label Grid.Row="1" Grid.Column="0" Content="Agent Key (X-GL-Key)" Style="{StaticResource FormLabel}" />
        <TextBox Grid.Row="1" Grid.Column="1" Name="ApiKeyBox" />

        <Label Grid.Row="2" Grid.Column="0" Content="Discord Channel ID" Style="{StaticResource FormLabel}" />
        <TextBox Grid.Row="2" Grid.Column="1" Name="ChannelBox" />

        <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,12,0,0" VerticalAlignment="Center">
          <CheckBox Name="ActiveWindowCheck" Content="Capture only active window" />
          <StackPanel Orientation="Horizontal" Margin="24,0,0,0" VerticalAlignment="Center">
            <Label Content="Interval (minutes):" Style="{StaticResource FormLabel}" Margin="0,0,8,0"/>
            <TextBox Name="IntervalBox" Width="60" HorizontalContentAlignment="Center"/>
          </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,10,0,0" VerticalAlignment="Center">
          <Label Content="JPEG quality:" Style="{StaticResource FormLabel}" Margin="0,0,8,0"/>
          <Slider Name="QualitySlider" Minimum="40" Maximum="100" Value="80" Width="260" />
          <TextBlock Name="QualityLabel" Text="80" Margin="10,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>

        <Border Grid.Row="5" Grid.ColumnSpan="2" Height="8" Background="{x:Null}"/>
        <ScrollViewer Grid.Row="6" Grid.ColumnSpan="2" VerticalScrollBarVisibility="Auto">
          <TextBlock Foreground="{StaticResource TextSecondaryBrush}"
                     Text="Tip: leave Channel ID empty to use the botâ€™s default."/>
        </ScrollViewer>
      </Grid>
    </Border>

    <!-- Buttons (centered, big, rounded) -->
    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,16,0,8">
      <Button Name="SaveBtn"  Click="SaveBtn_Click"  Content="Save"  Style="{StaticResource SecondaryButton}" Margin="6,0"/>
      <Button Name="StartBtn" Click="StartBtn_Click" Content="Start" Style="{StaticResource PrimaryButton}"   Margin="6,0"/>
      <Button Name="StopBtn"  Click="StopBtn_Click"  Content="Stop"  Style="{StaticResource SecondaryButton}" Margin="6,0" IsEnabled="False"/>
    </StackPanel>

    <!-- Status line -->
    <TextBlock Grid.Row="3" Name="StatusText" Foreground="{StaticResource TextSecondaryBrush}"
               Margin="4,0,4,0" Text="Ready."/>
  </Grid>
</Window>
