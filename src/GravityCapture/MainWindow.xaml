<Window x:Class="GravityCapture.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GravityCapture"
        mc:Ignorable="d"
        Title="Gravity Capture"
        Height="860" Width="1060"
        MinHeight="780" MinWidth="900"
        WindowStartupLocation="CenterScreen"
        Icon="Assets/GravityCapture.ico">

    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="{StaticResource BgTop}" Offset="0"/>
            <GradientStop Color="{StaticResource BgBottom}" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid Margin="18">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="14"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="14"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- App icon (33% larger so the text is readable) -->
            <Border Width="80" Height="80" CornerRadius="22" BorderBrush="{StaticResource BrushStrokeSoft}" BorderThickness="1" Background="{StaticResource BrushCardBg}">
                <Image Source="Assets/GravityCapture.png" Stretch="Uniform" Margin="6"/>
            </Border>

            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                <TextBlock Text="Gravity Capture" FontSize="22" FontWeight="SemiBold"/>
                <TextBlock Text="Log-Bot" FontSize="13" Foreground="{StaticResource BrushTextSecondary}" Margin="0,2,0,0"/>
            </StackPanel>

            <Border Grid.Column="3" CornerRadius="12" BorderThickness="1" BorderBrush="{StaticResource BrushStrokeSoft}" Background="{StaticResource BrushCardBg}" Padding="12,10">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Status:" Foreground="{StaticResource BrushTextSecondary}"/>
                    <TextBlock Text="{Binding StatusText}" Margin="8,0,0,0" FontWeight="SemiBold"/>
                </StackPanel>
            </Border>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="410"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left: Settings -->
            <Border Grid.Column="0" CornerRadius="18" BorderThickness="1" BorderBrush="{StaticResource BrushStrokeSoft}" Background="{StaticResource BrushPanelBg}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="16">

                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Settings" FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            <Button Grid.Column="1" Content="Save" Command="{Binding SaveSettingsCommand}" Margin="12,0,0,0"/>
                        </Grid>
                        <TextBlock Text="{Binding SaveStatusText}" FontSize="12" Foreground="{StaticResource BrushTextSecondary}" Margin="0,0,0,8" TextWrapping="Wrap"/>

                        <TextBlock Text="API Base URL" Foreground="{StaticResource BrushTextSecondary}"/>
                        <TextBox Text="{Binding ApiBaseUrl, UpdateSourceTrigger=PropertyChanged}" Margin="0,6,0,12"/>

                        <TextBlock Text="GL_SHARED_SECRET" Foreground="{StaticResource BrushTextSecondary}"/>
                        <PasswordBox x:Name="SecretBox" PasswordChanged="SecretBox_OnPasswordChanged" Margin="0,6,0,12"/>

                        <!-- Server/Tribe: stacked so long server names fit and are fully visible -->
                        <Grid Margin="0,0,0,12">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="10"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0">
                                <TextBlock Text="Server Name" Foreground="{StaticResource BrushTextSecondary}"/>
                                <TextBox
                                    Text="{Binding ServerName, UpdateSourceTrigger=PropertyChanged}"
                                    Margin="0,6,0,0"
                                    ToolTip="{Binding ServerName}"/>
                            </StackPanel>

                            <StackPanel Grid.Row="2">
                                <TextBlock Text="Tribe Name" Foreground="{StaticResource BrushTextSecondary}"/>
                                <TextBox
                                    Text="{Binding TribeName, UpdateSourceTrigger=PropertyChanged}"
                                    Margin="0,6,0,0"
                                    ToolTip="{Binding TribeName}"/>
                            </StackPanel>
                        </Grid>

                        <TextBlock Text="Capture Interval (seconds)" Foreground="{StaticResource BrushTextSecondary}"/>
                        <TextBox Text="{Binding IntervalSecondsText, UpdateSourceTrigger=PropertyChanged}" Margin="0,6,0,10" />
                        <TextBlock Text="Upscale Factor (1-4)" Foreground="{StaticResource BrushTextSecondary}"/>
                        <TextBox Text="{Binding UpscaleFactorText, UpdateSourceTrigger=PropertyChanged}" Margin="0,6,0,10" />
                        <TextBlock Text="Request Timeout (seconds)" Foreground="{StaticResource BrushTextSecondary}"/>
                        <TextBox Text="{Binding RequestTimeoutSecondsText, UpdateSourceTrigger=PropertyChanged}" Margin="0,6,0,10" />

                        <CheckBox Content="Enable CRITICAL pings" IsChecked="{Binding CriticalPingEnabled}" Margin="0,4,0,10"/>

                        <CheckBox Content="Debug: also call /extract (preview)" IsChecked="{Binding UseExtractPreview}" Margin="0,0,0,16"/>

                        <Border CornerRadius="14" BorderThickness="1" BorderBrush="{StaticResource BrushStrokeSoft}" Background="{StaticResource BrushCardBg}" Padding="12">
                            <StackPanel>
                                <TextBlock Text="Capture Region" FontSize="14" FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding RegionText}" Foreground="{StaticResource BrushTextSecondary}" Margin="0,4,0,10"/>

                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Calibrate Region" Command="{Binding CalibrateRegionCommand}" Margin="0,0,10,0"/>
                                    <Button Content="Send Once" Command="{Binding SendOnceCommand}" />
                                </StackPanel>

                                <TextBlock Text="{Binding RegionHint}" Foreground="{StaticResource BrushTextSecondary}" Margin="0,10,0,0" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>

                        <Border CornerRadius="14" BorderThickness="1" BorderBrush="{StaticResource BrushStrokeSoft}" Background="{StaticResource BrushCardBg}" Padding="12" Margin="0,14,0,0">
                            <StackPanel>
                                <TextBlock Text="Controls" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,10"/>
                                <StackPanel Orientation="Horizontal">
                                    <Button Style="{StaticResource PrimaryButton}" Content="Start" Command="{Binding StartCommand}" Margin="0,0,10,0"/>
                                    <Button Style="{StaticResource DangerButton}" Content="Stop" Command="{Binding StopCommand}" />
                                </StackPanel>
                                <TextBlock Text="{Binding LastSendSummary}" Foreground="{StaticResource BrushTextSecondary}" Margin="0,10,0,0" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>

                        <Border CornerRadius="14" BorderThickness="1" BorderBrush="{StaticResource BrushStrokeSoft}" Background="{StaticResource BrushCardBg}" Padding="12" Margin="0,14,0,12">
                            <StackPanel>
                                <TextBlock Text="Notes" FontSize="14" FontWeight="SemiBold"/>
                                <TextBlock Text="Calibrate once per monitor / UI scale. Region is stored as normalized coordinates so it scales with resolution." Foreground="{StaticResource BrushTextSecondary}" Margin="0,6,0,0" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>

                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Right: Preview -->
            <Border Grid.Column="2" CornerRadius="18" BorderThickness="1" BorderBrush="{StaticResource BrushStrokeSoft}" Background="{StaticResource BrushPanelBg}">
                <Grid Margin="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="12"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="12"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel>
                            <TextBlock Text="Live Preview" FontSize="16" FontWeight="SemiBold"/>
                            <TextBlock Text="This is the exact cropped image sent to the API." Foreground="{StaticResource BrushTextSecondary}" Margin="0,4,0,0"/>
                        </StackPanel>

                        <Border Grid.Column="1" CornerRadius="12" BorderThickness="1" BorderBrush="{StaticResource BrushStrokeSoft}" Background="{StaticResource BrushCardBg}" Padding="12,10">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Queue:" Foreground="{StaticResource BrushTextSecondary}"/>
                                <TextBlock Text="{Binding BusyText}" Margin="8,0,0,0" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <Border Grid.Row="2" MaxWidth="460" HorizontalAlignment="Center" CornerRadius="18" BorderThickness="1" BorderBrush="{StaticResource BrushStrokeSoft}" Background="#0C111B">
                        <Grid>
                            <Image Source="{Binding PreviewImage}" Stretch="Uniform" RenderOptions.BitmapScalingMode="HighQuality"/>
                            <TextBlock Text="{Binding PreviewOverlayText}" Foreground="{StaticResource BrushTextSecondary}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14"/>
                        </Grid>
                    </Border>

                    <Border Grid.Row="4" CornerRadius="14" BorderThickness="1" BorderBrush="{StaticResource BrushStrokeSoft}" Background="{StaticResource BrushCardBg}" Padding="12">
                        <StackPanel>
                            <TextBlock Text="Last Response" FontSize="14" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding LastResponse}" Foreground="{StaticResource BrushTextSecondary}" Margin="0,6,0,0" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>