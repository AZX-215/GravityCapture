<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>

    <!-- Windows 10 (2004) or newer so Windows.Graphics.Capture is available -->
    <TargetFramework>net9.0-windows10.0.19041.0</TargetFramework>

    <UseWPF>true</UseWPF>
    <UseWindowsForms>true</UseWindowsForms>

    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>

    <!-- Helps restore Windows SDK refs on non-Windows build hosts too -->
    <EnableWindowsTargeting>true</EnableWindowsTargeting>
  </PropertyGroup>

  <!-- Copy runtime settings/assets -->
  <ItemGroup>
    <Content Include="appsettings*.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>

    <None Update="tessdata\eng.traineddata">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>

    <Resource Include="Assets\Gravity_Logs_Background.png" />
  </ItemGroup>

  <!-- WinRT + Win32 interop for Windows.Graphics.Capture + P/Invokes -->
  <ItemGroup>
    <PackageReference Include="Microsoft.Windows.CsWinRT" Version="2.0.7" />
    <PackageReference Include="Microsoft.Windows.SDK.BuildTools" Version="10.0.26100.1" PrivateAssets="all" />
    <PackageReference Include="Microsoft.Windows.CsWin32" Version="0.3.64" PrivateAssets="all" />

    <!-- Existing dependencies -->
    <PackageReference Include="Tesseract" Version="5.2.0" />
  </ItemGroup>

  <!-- Tell CsWin32 which APIs to generate -->
  <ItemGroup>
    <AdditionalFiles Include="NativeMethods.txt" />
  </ItemGroup>

</Project>
