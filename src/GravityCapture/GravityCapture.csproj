<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <!-- Windows 10 (2004) or newer so Windows.Graphics.Capture is available -->
    <TargetFramework>net9.0-windows10.0.19041.0</TargetFramework>

    <UseWPF>true</UseWPF>
    <UseWindowsForms>true</UseWindowsForms>

    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <EnableWindowsTargeting>true</EnableWindowsTargeting>

    <!-- Silence cross-platform System.Drawing warnings we already gate to Windows -->
    <NoWarn>$(NoWarn);CA1416</NoWarn>

    <!-- Needed for Buffer.MemoryCopy in WGC readback -->
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>

    <!-- Disable SDK-generated AssemblyInfo to avoid duplicate attributes -->
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
  </PropertyGroup>

  <!-- Copy runtime settings/assets -->
  <ItemGroup>
    <Content Include="appsettings*.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
    </Content>

    <None Update="tessdata\eng.traineddata">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
    </None>

    <Resource Include="Assets\Gravity_Logs_Background.png" />
  </ItemGroup>

  <!-- Seed OCR profiles on first run -->
  <ItemGroup>
    <Content Include="Config\default.profiles.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
    </Content>
  </ItemGroup>

  <!-- WinRT + Win32 interop for Windows.Graphics.Capture + P/Invokes -->
  <ItemGroup>
    <PackageReference Include="Microsoft.Windows.CsWinRT" Version="2.*" />
    <!-- Existing dependency -->
    <PackageReference Include="Tesseract" Version="5.2.0" />
    <PackageReference Include="Vortice.Direct3D11" Version="2.*" />
    <PackageReference Include="Vortice.DXGI" Version="2.*" />
    <!-- WGC capture dependencies -->
  </ItemGroup>

  <!-- Tell CsWin32 which APIs to generate -->
  <ItemGroup>
    <AdditionalFiles Include="NativeMethods.txt" />
  </ItemGroup>
</Project>
