<Window x:Class="GravityCapture.Views.RegionCalibratorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Calibrate Region"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="#AA000000"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize">
    <Grid>
        <Canvas x:Name="RootCanvas" Background="Transparent"
                MouseLeftButtonDown="OnMouseDown"
                MouseMove="OnMouseMove"
                MouseLeftButtonUp="OnMouseUp">
            <Rectangle x:Name="Selection"
                       Stroke="#79B0FF"
                       StrokeThickness="2"
                       Fill="#224C8DFF"
                       Visibility="Collapsed"
                       RadiusX="8" RadiusY="8"/>
        </Canvas>

        <Border VerticalAlignment="Top" HorizontalAlignment="Center"
                Margin="0,22,0,0"
                Background="#CC0F1522"
                BorderBrush="#33223049"
                BorderThickness="1"
                CornerRadius="14"
                Padding="14,10">
            <StackPanel>
                <TextBlock Text="Drag to select the Tribe Log region" FontSize="14" FontWeight="SemiBold" TextAlignment="Center"/>
                <TextBlock Text="Release mouse to accept. Press Esc to cancel." Foreground="#A8B4C8" Margin="0,4,0,0" TextAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
